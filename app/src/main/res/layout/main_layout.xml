<?xml version="1.0" encoding="utf-8"?>
<LinearLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".views.MainFragment"
    android:id="@+id/main"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:background="#F7F7F7"
    android:gravity="center"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="90dp"
        android:layout_height="90dp"
        app:srcCompat="@drawable/ic_honeycomb" />

    <Spinner
        android:id="@+id/spinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/border"
        android:textAlignment="center" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@drawable/border"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="28dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"

            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_gravity="bottom"
                android:layout_marginTop="25dp"
                android:layout_weight="1"
                android:scaleX="1"
                android:scaleY="1"
                android:src="@drawable/ic_thermometer" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:layout_weight="1"
                android:fontFamily="@font/opensans_regular"
                android:gravity="top"
                android:text="Température"
                android:textAlignment="center"
                android:textColor="@android:color/background_dark"
                android:textSize="10dp" />
        </LinearLayout>

        <TextView
            android:id="@+id/data_lum"
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:fontFamily="@font/opensans_semibold"
            android:gravity="center"
            android:text="699Lux"
            android:textAlignment="center"
            android:textColor="@color/colorAccent"
            android:textSize="25sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/cross_lum"
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="30dp"
                android:layout_weight="1"
                android:gravity="bottom|center_horizontal"
                android:scaleX="0.7"
                android:scaleY="0.7"
                android:src="@drawable/ic_diagonal_arrow" />

            <TextView
                android:id="@+id/stats_lum"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:text="+35%"
                android:textAlignment="center"
                android:textColor="@color/colorAccent"

                android:textSize="10dp" />
        </LinearLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:scaleX="0.3"
            android:scaleY="0.3"
            android:src="@drawable/ic_next" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@drawable/border"

        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="28dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"

            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_gravity="bottom"
                android:layout_marginTop="25dp"
                android:layout_weight="1"
                android:scaleX="1"
                android:scaleY="1"
                android:src="@drawable/ic_sun" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:layout_weight="1"
                android:fontFamily="@font/opensans_regular"
                android:gravity="top"
                android:text="Température"
                android:textAlignment="center"
                android:textColor="@android:color/background_dark"
                android:textSize="10dp" />
        </LinearLayout>

        <TextView
            android:id="@+id/data_temp"
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:fontFamily="@font/opensans_semibold"
            android:gravity="center"
            android:text="69°C"
            android:textAlignment="center"
            android:textColor="@color/colorAccent"

            android:textSize="25sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/cross_temp"
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="30dp"
                android:layout_weight="1"
                android:gravity="bottom|center_horizontal"
                android:scaleX="0.7"
                android:scaleY="0.7"
                android:src="@drawable/ic_diagonal_arrow" />

            <TextView
                android:id="@+id/stats_lum"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:textColor="@color/colorAccent"

                android:layout_weight="1"
                android:text="+35%"
                android:textAlignment="center"
                android:textSize="10dp" />
        </LinearLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:scaleX="0.3"
            android:scaleY="0.3"
            android:src="@drawable/ic_next" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@drawable/border"

        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="28dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"

            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_gravity="bottom"
                android:layout_marginTop="25dp"
                android:layout_weight="1"
                android:scaleX="1"
                android:scaleY="1"
                android:src="@drawable/ic_dumbbell" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:layout_weight="1"
                android:fontFamily="@font/opensans_regular"
                android:gravity="top"
                android:text="Poid"
                android:textAlignment="center"
                android:textColor="@android:color/background_dark"
                android:textSize="10dp" />
        </LinearLayout>

        <TextView
            android:id="@+id/data_weight"
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:fontFamily="@font/opensans_semibold"
            android:gravity="center"
            android:text="35Kg"
            android:textAlignment="center"
            android:textColor="@color/colorAccent"

            android:textSize="25sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/cross_weight"
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="30dp"
                android:layout_weight="1"
                android:gravity="bottom|center_horizontal"
                android:scaleX="0.7"
                android:scaleY="0.7"
                android:src="@drawable/ic_diagonal_arrow" />

            <TextView
                android:id="@+id/stats_weight"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:text="+35%"
                android:textAlignment="center"
                android:textColor="@color/colorAccent"

                android:textSize="10dp" />
        </LinearLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:scaleX="0.3"
            android:scaleY="0.3"
            android:src="@drawable/ic_next" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@drawable/border"

        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="28dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"

            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_gravity="bottom"
                android:layout_marginTop="25dp"
                android:layout_weight="1"
                android:scaleX="1"
                android:scaleY="1"
                android:src="@drawable/ic_rain" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:layout_weight="1"
                android:fontFamily="@font/opensans_regular"
                android:gravity="top"
                android:text="Humidité"
                android:textAlignment="center"
                android:textColor="@android:color/background_dark"
                android:textSize="10dp" />
        </LinearLayout>

        <TextView
            android:id="@+id/data_humidity"
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:fontFamily="@font/opensans_semibold"
            android:gravity="center"
            android:text="40%"
            android:textAlignment="center"
            android:textColor="@color/colorAccent"

            android:textSize="25sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/cross_humidity"
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="30dp"
                android:layout_weight="1"
                android:gravity="bottom|center_horizontal"
                android:scaleX="0.7"
                android:scaleY="0.7"
                android:src="@drawable/ic_diagonal_arrow" />

            <TextView
                android:id="@+id/stats_humidity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:text="+35%"
                android:textAlignment="center"
                android:textColor="@color/colorAccent"

                android:textSize="10dp" />
        </LinearLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:scaleX="0.3"
            android:scaleY="0.3"
            android:src="@drawable/ic_next" />
    </LinearLayout>


</LinearLayout  >